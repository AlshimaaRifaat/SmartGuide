<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    tools:context=".fragment.ViewMyGuidesFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- TODO: Update blank fragment layout -->

        <android.support.v7.widget.Toolbar
            android:id="@+id/my_guides_tool_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_42sdp"
            android:background="#154677">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!-- <ImageView
                     android:id="@+id/home_image_favrite_heart"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentLeft="true"
                     android:background="@drawable/favorite_heart_button"
                     />-->
                <ImageView
                    android:id="@+id/my_guides_icon_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_11sdp"
                    android:src="@drawable/notifications_button"
                    />
                <ImageView
                    android:id="@+id/my_guides_icon_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/my_guides_icon_notification"
                    android:layout_marginRight="@dimen/_14sdp"
                    android:src="@drawable/group153"
                    />
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/MyGuides"
                    android:layout_toLeftOf="@+id/my_guides_icon_plus"
                    android:layout_marginRight="@dimen/_73sdp"
                    android:textColor="#fff"
                    android:textSize="@dimen/_14sdp"/>
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/my_guides_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_guides_tool_bar"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            ></android.support.v7.widget.RecyclerView>
    </RelativeLayout>

</ScrollView>