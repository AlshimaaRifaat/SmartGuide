<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f2f2f2"
    tools:context=".fragment.RequestPauseTripFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/request_pause_card_details"
        android:layout_width="@dimen/_290sdp"
       android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="@dimen/_18sdp"
        app:cardElevation="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_20sdp"

        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_9sdp">
            <TextView
                android:id="@+id/request_pause_trip_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#c8c8c8"
                android:textSize="@dimen/_10sdp"
                android:text="اسم الرحله"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_alignParentRight="true"
                />
            <TextView
                android:id="@+id/request_pause_guide_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#c8c8c8"
                android:textSize="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:text="اسم المشرف"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/request_pause_trip_name"
                />
            <TextView
                android:id="@+id/request_pause_bus_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#c8c8c8"
                android:textSize="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:text="رقم الحافلة"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/request_pause_guide_name"
                />
            <TextView
                android:id="@+id/request_pause_driver_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#c8c8c8"
                android:textSize="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:text="اسم السائق"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/request_pause_bus_number"
                />
            <TextView
                android:id="@+id/request_pause_going_down_Place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#c8c8c8"
                android:textSize="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:text="مكان النزول"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/request_pause_driver_name"
                />
            <TextView
                android:id="@+id/request_pause_delivery_Place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#c8c8c8"
                android:textSize="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:text="مكان الاستلام"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/request_pause_going_down_Place"
                />
            <TextView
                android:id="@+id/request_pause_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#c8c8c8"
                android:textSize="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:text="تاريخ بدايه"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/request_pause_delivery_Place"
                />
            <TextView
                android:id="@+id/request_pause_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#c8c8c8"
                android:textSize="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:text="تاريخ نهايه"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/_9sdp"
                android:layout_below="@+id/request_pause_start_date"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    </RelativeLayout>
</ScrollView>